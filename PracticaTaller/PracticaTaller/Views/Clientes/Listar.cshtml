@model List<PracticaTaller.Models.AccesoDatos.Cliente>

<table class="table-bordered">
    <thead>
        <tr>
            <th>APELLIDO:</th>
            <th>NOMBRE:</th>
            <th>DOCUMENTO:</th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var cliente in Model)
        {
            <tr>
                <td><strong>@cliente.Apellido</strong></td>
                <td><strong>@cliente.Nombre</strong></td>
                <td>@cliente.nro_dni</td>
                
                <td>
                    @Html.ActionLink("Eliminar", "Eliminar", new { id = @cliente.idCliente })
                </td>
                <td>
                    @Html.ActionLink("Modificar", "Modificar", new { id = @cliente.idCliente })
                </td>
            </tr>
        }
    </tbody>
</table>

